    RunTests           : BOOL := TRUE;
    TestFailed         : BOOL;
    TestCompleted      : BOOL;
    _AllTestsCompleted : BOOL;
    _AllTestsPassed    : BOOL;
END_VAR
]]></Declaration>
    <Implementation>
