    <Declaration><![CDATA[FUNCTION_BLOCK T_TestRunner IMPLEMENTS I_TestRunner
VAR
    State : (
        sInit,
        sGetTest,
        sRunTest,
        sCheckResults
    );
    TestSuiteName    : T_MaxString := 'TestSuite';
    Verbose          : BOOL;
	StopOnFailedTest : BOOL;
